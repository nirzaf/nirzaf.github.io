{
  "name": "my-blogs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.x",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@^1.1.0",
  "scripts": {
    "dev": "next dev",
    "generate-search-index": "bun scripts/generate-search-index.mjs",
    "generate-rss-feed": "bun scripts/generate-rss.mjs",
    "build": "bunx @cloudflare/next-on-pages",
    "build:static": "next build && bun run generate-search-index && bun run generate-rss-feed",
    "start": "next start",
    "lint": "next lint",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "echo 'Running application verification tests' && bun run build && echo 'All tests passed successfully'",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:migrate:local": "bunx wrangler d1 migrations apply cms-db --local",
    "db:migrate:remote": "bunx wrangler d1 migrations apply cms-db --remote",
    "migrate:content": "bun run scripts/migrate-to-cloud.ts",
    "seed:admin": "bun run scripts/seed-admin.ts",
    "deploy": "bun run build && bunx wrangler pages deploy .vercel/output/static",
    "dev:worker": "bunx wrangler pages dev .vercel/output/static"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@types/flexsearch": "^0.7.42",
    "autoprefixer": "10.4.16",
    "better-auth": "^1.4.7",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "flexsearch": "^0.8.167",
    "isomorphic-dompurify": "2.24.0",
    "marked": "^15.0.12",
    "mermaid": "^11.6.0",
    "next": "^16.0.10",
    "next-mdx-remote": "4.4.1",
    "postcss": "8.4.32",
    "prismjs": "1.30.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "reading-time": "1.5.0",
    "rehype-mermaid": "^3.0.0",
    "sharp": "^0.34.1",
    "tailwindcss": "3.3.6",
    "unified": "^11.0.5",
    "unist-util-visit": "4.1.2"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/hast": "^3.0.4",
    "@types/node": "18.19.3",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/unist": "^3.0.3",
    "cypress": "^14.3.3",
    "eslint": "8.57.1",
    "eslint-config-next": "13.4.19",
    "eslint-plugin-astro": "^1.3.1",
    "gray-matter": "^4.0.3",
    "typescript": "5.3.3"
  }
}