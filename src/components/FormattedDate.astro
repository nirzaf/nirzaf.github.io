---
interface Props {
    date: Date;
}

const { date } = Astro.props;

---

{date.getFullYear() !== 1900 && (
<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time> )}